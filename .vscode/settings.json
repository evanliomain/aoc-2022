{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.addMissingImports": true
  },
  "editor.tabSize": 2,
  "editor.rulers": [80],
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.trimAutoWhitespace": false,

  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#0f0f23",
    "titleBar.activeForeground": "#9999cc",
    "activityBar.background": "#0f0f23",
    "activityBar.foreground": "#99ff99",
    "activityBar.inactiveForeground": "#009900",
    "activityBar.activeBackground": "#01461f",
    "activityBar.activeFocusBorder": "#ffff66",
    "activityBar.activeBorder": "#99ff99",
    "activityBarBadge.foreground": "#0f0f23",
    "activityBarBadge.background": "#ffff66",
    "statusBar.background": "#0f0f23",
    "statusBar.foreground": "#009900",
    "statusBarItem.hoverBackground": "#d0b376",
  }
}
